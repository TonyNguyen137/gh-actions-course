{
   "printWidth": 120,
   "tabWidth": 2,
   "useTabs": false,
   "singleQuote": true,
   "trailingComma": "none",
   "semi": true,
   "endOfLine": "lf",
   "bracketSpacing": true,
   "arrowParens": "always",
   "bracketSameLine": true,
   "overrides": [
      {
         "files": ["*.html"],
         "options": {}
      },
      {
         "files": ["*.md"],
         "options": {
            "tabWidth": 2,
            "proseWrap": "preserve"
         }
      }
   ]
}
